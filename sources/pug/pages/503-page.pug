extends  ../_skeleton

block variables
  - var pageName = '503 page'

block title
  title=pageName

block page
  section.section.section-single.novi-background.bg-gray-darker(style='background-image: url(images/bg-special.jpg);')
    .section-single-inner
      //- Page Header
      include ../sections/_section-header-base-transparent

      //- Page Main
      .section-single-main
        .container 
          .row.justify-content-md-center
            .col-md-9.col-lg-8
              h5 The service is temporary unavailable
              .text-extra-large-bordered
                p 503
              p
                | Sorry, we're offline right now to make our site even better.
                br.d-none.d-sm-block
                |  Please, come back later and check what we've been up to.

              .group-xl
                a.button.button-primary(href='index.html') Back to Home
                a.button.button-default-outline(href='contact-us.html') Contact Us

      //- Page Footer
      include ../sections/_section-footer-base-transparent
  ="\n"